<?xml version='1.0' encoding='utf-8'?>
<widget id="es.davidpob99.polencyl" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PolenCyL</name>
    <description>
        Aplicación para visualizar de forma sencilla los valores actuales y las previsiones de polen en Castilla y León.
    </description>
    <author>
        David Población Criado
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />    
    <gap:plugin name="phonegap-admob" source="npm" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>    
</widget>
