<?xml version='1.0' encoding='utf-8'?>
<widget id="es.davidpob99.PolenCyL" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PolenCyL</name>
    <description>
        Aplicación para visualizar de forma sencilla los valores actuales y las previsiones de polen en Castilla y León.
    </description>
    <author>
        David Población Criado
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />    
    <plugin name="phonegap-admob" source="npm"/>
    <plugin spec="https://github.com/apache/cordova-plugin-splashscreen.git" source="git" />
    <preference name="SplashScreen" value="screen"/>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="res/android/icon/drawable-ldpi-icon.png" density="ldpi" />
        <icon src="res/android/icon/drawable-mdpi-icon.png" density="mdpi" />
        <icon src="res/android/icon/drawable-hdpi-icon.png" density="hdpi" />
        <icon src="res/android/icon/drawable-xhdpi-icon.png" density="xhdpi" />
        <icon src="res/android/icon/drawable-xxhdpi-icon.png" density="xxhdpi" />
        <icon src="res/android/icon/drawable-xxxhdpi-icon.png" density="xxxhdpi" />

        <splash src="res/android/splash/drawable-land-hdpi-screen.png" density="land-hdpi"/>
        <splash src="res/android/splash/drawable-land-ldpi-screen.png" density="land-ldpi"/>
        <splash src="res/android/splash/drawable-land-mdpi-screen.png" density="land-mdpi"/>
        <splash src="res/android/splash/drawable-land-xhdpi-screen.png" density="land-xhdpi"/>
        <splash src="res/android/splash/drawable-land-xxhdpi-screen.png" density="land-xxhdpi"/>
        <splash src="res/android/splash/drawable-land-xxxhdpi-screen.png" density="land-xxxhdpi"/>

        <splash src="res/android/splash/drawable-port-hdpi-screen.png" density="port-hdpi"/>
        <splash src="res/android/splash/drawable-port-ldpi-screen.png" density="port-ldpi"/>
        <splash src="res/android/splash/drawable-port-mdpi-screen.png" density="port-mdpi"/>
        <splash src="res/android/splash/drawable-port-xhdpi-screen.png" density="port-xhdpi"/>
        <splash src="res/android/splash/drawable-port-xxhdpi-screen.png" density="port-xxhdpi"/>
        <splash src="res/android/splash/drawable-port-xxxhdpi-screen.png" density="port-xxxhdpi"/>
    </platform>    
</widget>
